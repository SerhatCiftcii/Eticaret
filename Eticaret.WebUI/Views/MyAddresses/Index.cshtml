@model IEnumerable<Address>

@{
    ViewData["Title"] = "Adresler";
}



<p>
    <a asp-action="Create" class="btn btn-outline-primary ">
        <i class="fa-solid fa-plus"></i>Create New
    </a>
</p>
<table class="table table-hover table-striped table-bordered shadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destrict)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeliveryAddress)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destrict)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBillingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeliveryAddress)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AddressGuid" class="btn btn-sm btn-warning">
                       Düzenle
                    </a>
                   
                    <a asp-action="Delete" asp-route-id="@item.AddressGuid" class="btn btn-sm btn-danger">
                       Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

