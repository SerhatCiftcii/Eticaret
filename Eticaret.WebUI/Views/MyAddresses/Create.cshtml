@model Address

@{
    ViewData["Title"] = "Adres Ekle";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-plus-circle me-2"></i> Adres Ekle
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Destrict" class="form-label"></label>
                    <input asp-for="Destrict" class="form-control" />
                    <span asp-validation-for="Destrict" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OpenAddress" class="form-label"></label>
                    <textarea asp-for="OpenAddress" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="OpenAddress" class="text-danger"></span>
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" asp-for="IsBillingAddress">
                    <label class="form-check-label" asp-for="IsBillingAddress"></label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsDeliveryAddress">
                    <label class="form-check-label" asp-for="IsDeliveryAddress"></label>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Adres Ekle
                </button>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-danger">
                <i class="fa-solid fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>
