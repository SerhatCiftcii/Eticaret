
@{
    ViewData["Title"] = "Şifre Yenile";
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i> Şifre Değiştir
                    </h4>
                </div>
                <div class="card-body">
                    <h5>Kullanıcı Bilgilerini Giriniz</h5>
                    <hr />
                    <form asp-action="PasswordRenew" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label for="Email" class="control-label"></label>
                            <input name="Email" class="form-control" required placeholder="Email adresinizi girin" />
                            
                        </div>



                        <div class="form-group mt-3">
                            <input type="submit" value="Şifremi Yenile" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
            </div>
        </div>
    </div>
</div>