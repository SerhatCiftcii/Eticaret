@model AppUser

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-check me-2"></i> E-posta Doğrulaması
                    </h4>
                </div>
                <div class="card-body">
                    <h5>Doğrulama Kodunu Giriniz</h5>
                    <hr />
                    <form asp-action="VerifyEmail" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="VerificationCode" class="control-label"></label>
                            <input asp-for="VerificationCode" class="form-control" />
                            <span asp-validation-for="VerificationCode" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <input type="submit" value="Doğrula" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
            </div>
        </div>
    </div>
</div>

