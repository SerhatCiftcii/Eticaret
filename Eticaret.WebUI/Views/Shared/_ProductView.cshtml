@model Product
<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        <!-- Product image-->
        <div class="">
        <a href="/Products/Details/@Model.Id">
            <img class="card-img-top" src="/Img/Products/@Model.Image" alt="@Model.Name">
        </a>
        </div>
       
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Name</h5>
                <!-- Product price--> 
                @Model.Price.ToString("c")
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-2 border-top-0 bg-transparent">
            <div class="d-flex justify-content-center gap-3">
                <a class="btn btn-outline-dark mt-auto" href="#">Sepete Ekle</a>
                <a class="btn btn-outline-dark mt-auto" href="/Products/Details/@Model.Id">Ürün Detay</a>
            </div>

        </div>
    </div>
</div>