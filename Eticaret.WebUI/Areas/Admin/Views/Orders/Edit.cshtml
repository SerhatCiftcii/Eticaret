@model Eticaret.Core.Entities.Order

@{
    ViewData["Title"] = "Sipariş Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i> Sipariş Düzenle
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="OrderDate" />
                        <input type="hidden" asp-for="OrderNumber" />
                        <input type="hidden" asp-for="TotalPrice" />
                        <input type="hidden" asp-for="AppUserId" />
                        <input type="hidden" asp-for="CustomerId" />

                        <!-- Sipariş Numarası -->
                        <div class="form-group mb-3">
                            <label asp-for="OrderNumber" class="form-label">Sipariş Numarası</label>
                            <input asp-for="OrderNumber" class="form-control" disabled />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>

                        <!-- Toplam Fiyat -->
                        <div class="form-group mb-3">
                            <label asp-for="TotalPrice" class="form-label">Toplam Fiyat</label>
                            <input asp-for="TotalPrice" class="form-control" disabled />
                            <span asp-validation-for="TotalPrice" class="text-danger"></span>
                        </div>

                        <!-- Kullanıcı Bilgisi -->
                        <div class="form-group mb-3">
                            <label asp-for="AppUser" class="form-label">Kullanıcı</label>
                            <input asp-for="AppUser" value="@Model.AppUser.Name @Model.AppUser.Surname" class="form-control" disabled />
                            <span asp-validation-for="AppUserId" class="text-danger"></span>
                        </div>

                        <!-- Sipariş Durumu -->
                        <div class="form-group mb-3">
                            <label asp-for="OrderState" class="form-label">Sipariş Durumu</label>
                            <select asp-for="OrderState" class="form-select" asp-items="ViewBag.OrderStates">
                                <option value="">Seçiniz</option>
                            </select>
                            <span asp-validation-for="OrderState" class="text-danger"></span>
                        </div>

                        <!-- Fatura Adresi -->
                        <div class="form-group mb-3">
                            <label asp-for="BillingAddress" class="form-label">Fatura Adresi</label>
                            <input asp-for="BillingAddress" class="form-control" />
                            <span asp-validation-for="BillingAddress" class="text-danger"></span>
                        </div>

                        <!-- Teslimat Adresi -->
                        <div class="form-group mb-3">
                            <label asp-for="DeliveryAddress" class="form-label">Teslimat Adresi</label>
                            <input asp-for="DeliveryAddress" class="form-control" />
                            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
                            <input type="submit" value="Kaydet" class="btn btn-primary me-md-2" />
                        </div>
                    </form>
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-danger">
                            <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Listeye Dön Linki -->
 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
