@model Slider


<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-info-circle me-2"></i> Slider Details
            </h4>
        </div>
        <div class="card-body">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-10">
                    <img src="/Img/Slider/@Model.Image" height="80" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Link)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Link)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@Model?.Id">
                <i class="fa-solid fa-pencil-alt me-2"></i> Go to Edit
            </a> |
            <a asp-action="Index" class="btn btn-sm btn-danger ms-2">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
