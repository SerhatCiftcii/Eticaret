@model Address

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-trash me-2"></i> Adres Sil
            </h4>
        </div>
        <div class="card-body">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Destrict)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Destrict)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OpenAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OpenAddress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsBillingAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsBillingAddress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsDeliveryAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsDeliveryAddress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AppUser)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.Email)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-md btn-danger" onclick="return confirm('Bu adresi silmek istediğinize emin misiniz?');">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>
