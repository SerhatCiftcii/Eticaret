@model Eticaret.Core.Entities.Address

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-info-circle me-2"></i> Adres Detayları
            </h4>
        </div>
        <div class="card-body">
            <hr />
            <dl class="row">
                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.Destrict)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.Destrict)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.OpenAddress)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.OpenAddress)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.IsBillingAddress)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.IsBillingAddress)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.IsDeliveryAddress)
                </dt>
                <dd class="col-sm-10 py-2 border-bottom" style="border-bottom: 1px solid #eee;">
                    @Html.DisplayFor(model => model.IsDeliveryAddress)
                </dd>

                <dt class="col-sm-2 py-2">
                    @Html.DisplayNameFor(model => model.AppUser)
                </dt>
                <dd class="col-sm-10 py-2">
                    @Html.DisplayFor(model => model.AppUser.Email)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@Model?.Id">
                <i class="fa-solid fa-pencil-alt"></i> Düzenle
            </a> |
            <a asp-action="Index" class="btn btn-danger btn-sm 
                <i class="fa-solid fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>
